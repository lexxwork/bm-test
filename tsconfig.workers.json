{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "sourceMap": true,
    "outDir": "workers",
    "baseUrl": "./src/workers/",
    "paths": {
      "lib/*": ["./src/lib/*.ts"],
      "models/*": ["./src/models/*.ts"]
    }
  },
  "include": ["./src/workers/**/*.ts"],
  "exclude": ["node_modules"]
}
